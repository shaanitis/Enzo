<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFrag">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
      android:id="@+id/profile_cardView"
      android:layout_width="match_parent"
      android:backgroundTint="#0C81F4"
      android:layout_height="220dp"
      android:layout_marginTop="-70dp"
      app:cardCornerRadius="70dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/profilePic"
          android:layout_marginTop="85dp"
          android:layout_marginLeft="30dp"
          android:layout_width="96dp"
          android:layout_height="96dp"
         />

      <TextView
          android:id="@+id/profileName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="95dp"
          android:fontFamily="@font/acme"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:textSize="24sp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <TextView
      android:id="@+id/viewafterprofilecardview"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      app:layout_constraintTop_toBottomOf="@+id/profile_cardView"
      android:layout_marginTop="5dp"
      android:text="About"
      android:gravity="center"
      android:fontFamily="@font/acme"
      android:textStyle="bold"
      android:textAllCaps="false"
      android:textSize="22sp"
      android:paddingTop="5dp"
      android:textColor="@color/black"
      android:layout_marginEnd="40dp"
      android:layout_marginStart="40dp"/>

  <androidx.cardview.widget.CardView
      android:id="@+id/logoutView"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      app:cardCornerRadius="15dp"
    app:layout_constraintTop_toBottomOf="@+id/viewafterprofilecardview"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="20dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:drawableStart="@drawable/logout_icon"
        android:drawableTint="@color/black"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"/>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>