<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAdActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="70dp">



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/adViewImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"

        android:src="@color/black"/>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:cardCornerRadius="40dp"
              app:layout_constraintTop_toTopOf="@id/adViewImage"
              android:layout_marginTop="200dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


              <TextView
                android:id="@+id/adViewTitle"
                android:layout_width="wrap_content"
                  android:maxWidth="300dp"
                  android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="55dp"
                android:maxHeight="50dp"
                android:textSize="22sp"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:textStyle="bold"
                android:text="Netflix Account"
                  android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#DDD9D9"
        android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Price"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000"
                android:textSize="18sp"

                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:maxWidth="200dp"
                android:maxHeight="70dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#DDD9D9"
        android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:textColor="@color/black"
                android:scrollbars="vertical"
                android:fillViewport="true"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Ad detail cdjascbusd dlkchdsh dsfhdsiuhcds coisdhvcids cdsvbdsu dsvds vidshvids dsvgdsiuv dsiv dsiuvgdsiuv dsv ivgbdsigvdsigeuifhbdsi vids dsigvbds "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#DDD9D9"
        android:layout_marginTop="7dp"/>

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Ad by"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOfUploader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/nameOfUploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text=""/>
</LinearLayout>

          </androidx.cardview.widget.CardView>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/chatWithUploaderBtn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:text="Chat"
        android:fontFamily="@font/acme"
        android:drawableLeft="@drawable/chat_icon"
        android:textStyle="bold"
        android:textSize="22dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>