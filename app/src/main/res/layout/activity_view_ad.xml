<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAdActivity">



    <ScrollView
        android:id="@+id/adScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="70dp">



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/adViewImage"
        android:transitionName="viewAdImgTrans"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gray"/>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/adViewImage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/detailsLayout">


              <TextView
                android:id="@+id/adViewTitle"
                android:layout_width="wrap_content"
                  android:maxWidth="350dp"
                  android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:maxHeight="60dp"
                android:textSize="22sp"
                  android:maxLines="2"
                  android:fontFamily="@font/arimo"
                  android:ellipsize="end"
                  android:textStyle="bold"
                android:text="Netflix Account"
                  android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Price:"
                android:fontFamily="@font/arimo"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000"
                android:textSize="16sp"
                android:fontFamily="@font/arimo"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:maxWidth="200dp"
                android:maxHeight="70dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Description:"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:textColor="@color/black"
                android:scrollbars="vertical"
                android:fillViewport="true"
                android:fontFamily="@font/arimo"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Ad detail cdjascbusd dlkchdsh dsfhdsiuhcds coisdhvcids cdsvbdsu dsvds vidshvids dsvgdsiuv dsiv dsiuvgdsiuv dsv ivgbdsigvdsigeuifhbdsi vids dsigvbds "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adUploaderProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/adbyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#696666"
            android:text="Ad by"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOfUploader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/adbyTv"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@color/black"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            />

        <TextView
            android:id="@+id/nameOfUploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="30dp"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/arimo"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="@id/imageOfUploader"
            app:layout_constraintBottom_toBottomOf="@id/imageOfUploader"
            app:layout_constraintStart_toEndOf="@id/imageOfUploader"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text=""/>
        <TextView
            android:id="@+id/seeProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="30dp"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/arimo"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/nameOfUploader"
            app:layout_constraintStart_toEndOf="@id/imageOfUploader"
            android:textColor="@color/orange_200"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="SEE PROFILE"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/forward_icon"
            android:layout_marginEnd="7dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696666"
        android:text="Contact No"
        android:fontFamily="@font/arimo"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/contactNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="30dp"
        android:maxWidth="150dp"
        android:fontFamily="@font/arimo"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696666"
        android:text="Location"
        android:fontFamily="@font/arimo"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/adLocation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"

        >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/map_pic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"/>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/location_icon"
                app:tint="@color/black"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Tap to View"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/arimo"
                android:textSize="14sp"/>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</LinearLayout>

          </androidx.cardview.widget.CardView>


       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/navBarbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent">


    <LinearLayout
        android:id="@+id/chatAndBidLayout"
        android:layout_width="0dp"
        android:paddingEnd="10dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveAdBtn"
        android:orientation="horizontal"
        android:weightSum="2"
      >

        <androidx.cardview.widget.CardView
            android:id="@+id/chatWithUploaderBtn"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange_main"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center_vertical"
          >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/chatBtnText"
                android:src="@drawable/chat"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/chatBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/arimo"
                android:text="CHAT"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/placeBidBtn"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
          android:layout_gravity="center_vertical"
            android:backgroundTint="@color/orange_main"
            app:cardCornerRadius="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/bidBtnText"
                    android:src="@drawable/bid_icon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/bidBtnText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/arimo"
                    android:text=" BID"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/saveAdBtn"
            android:layout_width="50dp"
            android:layout_height="46dp"
          app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/chatAndBidLayout"
            app:layout_constraintBottom_toBottomOf="parent"

            android:backgroundTint="#E3E1DF"
            app:cardCornerRadius="17dp">

                <ImageView
                   android:id="@+id/saveIconImg"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                   android:layout_gravity="center"
                    android:src="@drawable/saveborder"
                    app:tint="@color/black" />




        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/bid_bottom_sheet"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <ImageButton
        android:id="@+id/goBackBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#00ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/back_btn"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapFrag"/>

</androidx.constraintlayout.widget.ConstraintLayout>