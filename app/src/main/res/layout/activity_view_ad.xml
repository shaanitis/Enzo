<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAdActivity">


    <ScrollView
        android:id="@+id/adScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="70dp"
            >



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/adViewImage"
        android:transitionName="viewAdImgTrans"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"

        android:src="@drawable/gray"/>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:cardElevation="0dp"
              app:layout_constraintTop_toBottomOf="@id/adViewImage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


              <TextView
                android:id="@+id/adViewTitle"
                android:layout_width="wrap_content"
                  android:maxWidth="350dp"
                  android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:maxHeight="60dp"
                android:textSize="22sp"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:textStyle="bold"
                android:text="Netflix Account"
                  android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Price:"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000"
                android:textSize="18sp"

                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:maxWidth="200dp"
                android:maxHeight="70dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Description:"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/adViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:textColor="@color/black"
                android:scrollbars="vertical"
                android:fillViewport="true"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Ad detail cdjascbusd dlkchdsh dsfhdsiuhcds coisdhvcids cdsvbdsu dsvds vidshvids dsvgdsiuv dsiv dsiuvgdsiuv dsv ivgbdsigvdsigeuifhbdsi vids dsigvbds "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#D0CCCC"
        android:layout_marginTop="7dp"/>

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696666"
                android:text="Ad by"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOfUploader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            />

            <TextView
                android:id="@+id/nameOfUploader"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:maxHeight="60dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text=""/>
</LinearLayout>

          </androidx.cardview.widget.CardView>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:background="@color/navBarbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/chatWithUploaderBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="68dp"
        android:backgroundTint="@color/orange_main"
       app:cardCornerRadius="15dp"

       >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="48dp"
            android:src="@drawable/chat"
            app:tint="@color/white"
            />
        <TextView
            android:id="@+id/chatBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="48dp"
            android:textAllCaps="false"
            android:text="Chat     "
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/white"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/saveAdBtn"
        android:layout_width="52dp"
        android:layout_height="55dp"
       android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:backgroundTint="#F5EAE3"
       >
        <ImageView
            android:id="@+id/saveIconImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#00ffffff"
            android:src="@drawable/saveborder" />
    </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <ImageButton
        android:id="@+id/goBackBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#00ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/backicon"/>
</androidx.constraintlayout.widget.ConstraintLayout>