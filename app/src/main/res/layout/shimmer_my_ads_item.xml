<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shimmer_cardview_bg"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toRightOf="@+id/shimmerImg"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/shimmerTitle"
        android:backgroundTint="#e7e7e7"
        android:layout_marginStart="12dp"
        android:layout_width="180dp"
        app:cardCornerRadius="15dp"
        android:layout_height="15dp" />
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/shimmerTitle"
        app:layout_constraintLeft_toRightOf="@+id/shimmerImg"
        android:layout_marginTop="10dp"
        android:id="@+id/shimmerPrice"

        app:cardCornerRadius="5dp"
        android:backgroundTint="#e7e7e7"
        android:layout_marginStart="17dp"
        android:layout_width="150dp"
        android:layout_height="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#B5B1B1"/>

</androidx.constraintlayout.widget.ConstraintLayout>